<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/bg_login"
                tools:context="abk.activities.SignUpPassword">

    <ImageView android:paddingTop="30dp" android:layout_width="40dp" android:layout_height="wrap_content"
               android:id="@+id/imageView" android:adjustViewBounds="true" android:src="@drawable/headphone_icon"
               android:alpha="0.7"
               android:layout_centerHorizontal="true" android:layout_alignParentTop="true"/>

    //========================================= Password
    ========================================================================
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            >
        <RelativeLayout android:layout_width="290dp" android:layout_height="40dp" android:id="@+id/relativeLayout2"
                        android:paddingTop="3dp" android:paddingBottom="3dp"
                        android:paddingLeft="20dp" android:paddingRight="20dp"
                        android:background="@drawable/edittext_area"
                        android:layout_marginBottom="18dp"
                        android:layout_above="@+id/btnSignUp" android:layout_centerHorizontal="true">
            <EditText android:background="@null" android:layout_width="fill_parent" android:layout_height="50dp"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:inputType="textPassword"
                      android:id="@+id/txtConfirmPass" android:textColor="#ffebdde9" android:textColorHint="#ffebdde9"
                      android:textSize="18sp" android:typeface="monospace" android:hint="@string/hintPasswordConfirm"
                      android:gravity="center" android:layout_alignParentTop="true"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="290dp" android:layout_height="40dp" android:id="@+id/relativeLayout"
                        android:paddingTop="3dp" android:paddingBottom="3dp"
                        android:paddingLeft="20dp" android:paddingRight="20dp"
                        android:background="@drawable/edittext_area"
                        android:layout_marginBottom="17dp"
                        android:layout_above="@+id/relativeLayout2" android:layout_alignLeft="@+id/relativeLayout2"
                        android:layout_alignStart="@+id/relativeLayout2">
            <EditText android:background="@null" android:layout_width="fill_parent" android:layout_height="50dp"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:inputType="textPassword"
                      android:id="@+id/txtPass" android:textColor="#ffebdde9" android:textColorHint="#ffebdde9"
                      android:textSize="18sp" android:typeface="monospace" android:hint="@string/hintPassword"
                      android:gravity="center" android:layout_alignParentBottom="true"
                      android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <ImageButton android:id="@+id/btnSignUp" android:layout_width="60dp" android:layout_height="60dp"
                     android:scaleType="fitCenter" android:background="#00000000"
                     android:src="@drawable/signup_icon" android:alpha="0.4"
                     android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>
