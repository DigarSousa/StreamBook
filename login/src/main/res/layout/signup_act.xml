<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg_login"
                android:clickable="true">

    //LOGO
    //===========================================================================
    <ImageView
            android:paddingTop="30dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:adjustViewBounds="true"
            android:src="@drawable/headphone_icon"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.7"/>
    //===========================================================================

    //WELCOME
    //===========================================================================
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SignUpTitleArea"
            android:layout_below="@+id/logo"
            android:layout_marginTop="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

    </RelativeLayout>
    //===========================================================================

    //Signup Area
    //===========================================================================
    //Signup
    //-----------------------------------------------------------------------
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SignUpArea"
            android:paddingTop="20dp"
            android:paddingBottom="3dp"
            android:layout_below="@+id/SignUpTitleArea"
            android:layout_centerHorizontal="true">

        //Name
        <RelativeLayout
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:id="@+id/nameArea"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edittext_area">

            <!--<ImageView
                android:id="@+id/personIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/person_icon"
                android:layout_centerVertical="true"/>-->

            <EditText
                    android:background="@null"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/txtName"
                    android:textColor="#ffebdde9"
                    android:textColorHint="#ffebdde9"
                    android:textSize="18sp"
                    android:typeface="monospace"
                    android:hint="@string/hintName"
                    android:gravity="center"/>
        </RelativeLayout>

        //Email
        <RelativeLayout
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:id="@+id/emailArea"
                android:layout_marginTop="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/nameArea"
                android:background="@drawable/edittext_area">

            <!--<ImageView
                android:id="@+id/emailIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/person_icon"
                android:layout_centerVertical="true"/>-->

            <EditText
                    android:background="@null"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:inputType="textEmailAddress"
                    android:id="@+id/txtEmail"
                    android:textColor="#ffebdde9"
                    android:textColorHint="#ffebdde9"
                    android:textSize="18sp"
                    android:typeface="monospace"
                    android:hint="@string/hintEmail"
                    android:gravity="center" android:layout_toLeftOf="@+id/imgCheckMail"
                    android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imgCheckMail"
                    android:src="@drawable/warning" android:layout_centerVertical="true"
                    android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        //Password
        <RelativeLayout
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:id="@+id/passArea"
                android:layout_marginTop="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/emailArea"
                android:background="@drawable/edittext_area">

            <!--<ImageView
                android:id="@+id/emailIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/person_icon"
                android:layout_centerVertical="true"/>-->

            <EditText
                    android:background="@null"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:inputType="textPassword"
                    android:id="@+id/txtPass"
                    android:textColor="#ffebdde9"
                    android:textColorHint="#ffebdde9"
                    android:textSize="18sp"
                    android:typeface="monospace"
                    android:hint="@string/hintPassword"
                    android:gravity="center"/>
        </RelativeLayout>

        //Password
        <RelativeLayout
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:id="@+id/passConfirmArea"
                android:layout_marginTop="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/passArea"
                android:background="@drawable/edittext_area">

            <!--<ImageView
                android:id="@+id/emailIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/person_icon"
                android:layout_centerVertical="true"/>-->

            <EditText
                    android:background="@null"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:inputType="textPassword"
                    android:id="@+id/txtConfirmPass"
                    android:textColor="#ffebdde9"
                    android:textColorHint="#ffebdde9"
                    android:textSize="18sp"
                    android:typeface="monospace"
                    android:hint="@string/hintPasswordConfirm"
                    android:gravity="center"/>
        </RelativeLayout>

        <ImageButton
                android:id="@+id/btnSignUP"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:src="@drawable/signup_icon"
                android:layout_below="@+id/passConfirmArea"
                android:layout_centerHorizontal="true"
                android:alpha="0.4"/>

    </RelativeLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/SignUpTitle"
            android:textColor="#ffb1a6af"
            android:textSize="25sp"
            android:typeface="monospace"
            android:text="@string/signUp"
            android:gravity="center" android:layout_below="@+id/logo" android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"/>
    //-----------------------------------------------------------------------
    //===========================================================================
</RelativeLayout>
